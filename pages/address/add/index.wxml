<!--pages/address/add/index.wxml-->
<view class="container address-detail">
  <form class="form-content">
    <van-cell-group>
      <van-field
        value="{{ value }}"
        label="收货人"
        placeholder="您的姓名"
      />
      <van-field
        value="{{ value }}"
        label="手机号"
        placeholder="联系您的手机号"
      />
      <van-field
        value="{{ value }}"
        label="地址"
        bind:focus="onShowPopup"
        placeholder="省/市/区"
      />
      <van-field
        value="{{ value }}"
        label="详细地址"
        placeholder="门牌号等(例如:10栋1001号)"
      />
      
      <van-cell title="标签" title-width="94px">
        <van-radio-group value="{{ radio }}" direction="horizontal">
          <van-radio name="1">家</van-radio>
          <van-radio name="2">公司</van-radio>
        </van-radio-group>
      </van-cell>
    </van-cell-group>
  </form>
  <view class="footer-btn">
    <van-button block type="primary" round>保存</van-button>
  </view>
  <van-popup
    show="{{ show }}"
    position="botttom"
    round
    custom-style="height: 20%;"
    bind:close="onClose">
    <van-area area-list="{{ areaList }}" value="110101" />
  </van-popup>
</view>